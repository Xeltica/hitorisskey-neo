generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String     @id
  created_at      DateTime   @default(now()) @db.Timestamp()
  token           String     @unique
  email           String?
  hashed_password String?
  role            Role       @default(User)
  is_banned       Boolean    @default(false)
  is_silenced     Boolean    @default(false)
  sent_mails      Mail[]     @relation("sent")
  received_mails  Mail[]     @relation("received")
  posts           Post[]
  reactions       Reaction[]
  reports         Report[]
}

enum Role {
  User
  Moderator
  Admin
}

model Post {
  id         String     @id
  created_at DateTime   @default(now()) @db.Timestamp()
  author_id  String
  channel    String
  content    String     @db.VarChar(1024)
  annotation String?
  author     User       @relation(fields: [author_id], references: [id])
  reactions  Reaction[]
}

model Mail {
  id          String   @id
  created_at  DateTime @default(now()) @db.Timestamp()
  author_id   String
  receiver_id String?
  content     String
  author      User     @relation("sent", fields: [author_id], references: [id])
  receiver    User?    @relation("received", fields: [receiver_id], references: [id])
}

model Report {
  id         String     @id
  created_at DateTime   @default(now()) @db.Timestamp()
  author_id  String
  type       ReportType
  target_id  String
  is_done    Boolean    @default(false)
  author     User       @relation(fields: [author_id], references: [id])
}

enum ReportType {
  Post
  Mail
}

model Reaction {
  id         String   @id
  created_at DateTime @default(now()) @db.Timestamp()
  author_id  String
  post_id    String
  emoji      String
  author     User     @relation(fields: [author_id], references: [id])
  post       Post     @relation(fields: [post_id], references: [id])
}

model CustomChannel {
  name         String   @id
  created_at   DateTime @default(now()) @db.Timestamp()
  display_name String
  description  String
}
